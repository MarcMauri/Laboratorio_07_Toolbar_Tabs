<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewFlag"
        android:layout_width="100dp"
        android:padding="@dimen/padding_flag"
        android:layout_height="@dimen/height_item_flag" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/fragment_padding"
        android:paddingStart="@dimen/fragment_padding">

        <TextView
            android:id="@+id/textViewListPersonName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:maxLength="18"
            android:textSize="@dimen/text_size_list_name" />

        <TextView
            android:id="@+id/textViewListCountryName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>